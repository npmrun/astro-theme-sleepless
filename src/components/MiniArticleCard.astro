<div class="p-[14px] w-1/3">
    <div
        class="bg-white h-[100px] rounded border border-transparent hover:shadow-md hover:border-red-400 p-4 transition-all transform hover:scale-105"
    >
        <a class="text-md h-[45px] flex items-center" href={href}>
            <!-- <div class="w-[45px] h-full rounded flex bg-slate-300 mr-2">
                <img class="w-[70%] h-[70%] m-auto" src="https://www.sioe.cn/favicon.ico" alt="">
            </div> -->
            <span class="truncate">{articleData.data.title}</span>
        </a>
        <div class="text-xs text-[#5f5f5f] pt-2">
            {
                articleData?.data.updatedDate ? (
                    <span>
                        修改时间：
                        <span>
                            {new Date(
                                articleData.data.updatedDate,
                            ).toLocaleDateString('zh-cn', {
                                year: 'numeric',
                                month: 'short',
                                day: 'numeric',
                                hour: 'numeric',
                                minute: 'numeric',
                                second: 'numeric',
                            })}
                        </span>
                    </span>
                ) : (
                    articleData?.data.pubDate && (
                        <span>
                            创建时间：
                            <span>
                                {new Date(
                                    articleData.data.pubDate,
                                ).toLocaleDateString('zh-cn', {
                                    year: 'numeric',
                                    month: 'short',
                                    day: 'numeric',
                                    hour: 'numeric',
                                    minute: 'numeric',
                                    second: 'numeric',
                                })}
                            </span>
                        </span>
                    )
                )
            }
        </div>
    </div>
</div>

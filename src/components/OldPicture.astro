<style>
    figure {
        display: inline-flex;
        position: relative;
        width: 100px;
        filter: sepia(100%);
    }
    img {
        border-radius: 50%;
        aspect-ratio: 4/4;
        object-fit: cover;
    }
    figure::before {
        border-radius: 50%;
        content: '';
        position: absolute;
        inset: 0;
        background: linear-gradient(#000a, #000a),
            repeating-radial-gradient(#000 0 0.0001%, #fff 0 0.0002%) 50% 0 /
                2500px 2500px,
            repeating-conic-gradient(#000 0 0.0001%, #fff 0 0.0002%) 60% 60% /
                2500px 2500px;
        background-blend-mode: normal, difference;
        mix-blend-mode: overlay;
        opacity: 0.6;
    }
</style>

<figure>
    <img alt={alt} src={avatar} />
</figure>

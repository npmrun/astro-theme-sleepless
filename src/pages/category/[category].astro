---
import { getCollection } from 'astro:content'
import SinglePage from '@blog/layouts/SinglePage.astro'

export async function getStaticPaths() {
    const allPosts = await getCollection('posts')
    const uniqueCategories = [
        ...new Set(allPosts.map((post) => post.data.category).flat()),
    ]

    return uniqueCategories.map((category) => {
        const filteredPosts = allPosts.filter((post) =>
            post.data.category.includes(category)
        )
        return {
            params: { category },
            props: { posts: filteredPosts },
        }
    })
}

const { category } = Astro.params
const { posts } = Astro.props
---

<SinglePage>
    <p>当前分类下文章： {category}</p>
    <ul>
        {
            posts.map((post) => (
                <li>
                    <a href={'/posts/' + post.slug} title={post.data.title}>
                        {post.data.title}
                    </a>
                </li>
            ))
        }
    </ul>
</SinglePage>

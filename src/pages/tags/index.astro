---
import SinglePage from '@blog/layouts/SinglePage.astro'
import { getTagsData } from '@root/src/utils';
const tags = await getTagsData()
---

<SinglePage>
    <h2 class="text-2xl">标签</h2>
    <div>
        {
            tags.map((tag) => (
            <a href={'/tags/' + tag} class="hover:underline">#{tag}</a><span class="mx-1"> </span>
            ))
        }
    </div>
</SinglePage>
